


<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <h2>Change song name:</h2>
  <label for="name"> <%= @song.name %> to...</label>
  <input type="text" name="Name">

  <h2>Change song artist</h2>
  <label for="name"> <%= @song.artist.name %> to... </label>
  <input type="text" name="Artist Name">

  <h2>Change song genre:</h2>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>"
    <%='checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
  <% end %>

  <br></br>
  <div>
    <input type="submit" value="Save">
  </div>

</form>
