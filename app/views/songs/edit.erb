<h1>Edit a song</h1>

<form action="/songs/<%=@song.slug%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <h2>Song's name: <input type="text" name="song[name]" id="Name" value="<%=@song.name%>"></h2>

  <h2>Song's artist: <input type="text" name="song[artist]" value="<%=@song.artist.name%>" id="Artist Name"></h2>

  <h2>Song's genres:</h2>
    <% Genre.all.each do |g| %>
    <h3><input type="checkbox" name="song[genres][]" value="<%=g.id%>" id="<%= g.name %>" <%="checked" if @song.genres.include?(g) %> > <%= g.name %></h3>
    <% end %>

  <h2><input type="submit" name="" value="NOOOOOOOO!" id="Save"></h2>
</form>
